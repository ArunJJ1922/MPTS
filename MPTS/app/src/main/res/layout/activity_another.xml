<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/chem12"
    tools:context=".AnotherActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:text="Title"
        android:textSize="22sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@id/imageView10"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description1"
        android:textSize="18sp"
        android:textColor="#a9a9a9"
        android:layout_below="@id/title1"
        android:layout_marginTop="20dp"
        />

      <Button
          android:id="@+id/but1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bacground"
          android:text="FEATURES"
          android:textStyle="bold|italic"
          android:textColor="#F7F7F8"
          android:textSize="17sp"
          android:layout_below="@id/description1"
          android:layout_marginTop="30dp"
          android:layout_centerHorizontal="true"
          />


      <Button
          android:id="@+id/but2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bacground"
          android:text="USES"
          android:textStyle="bold|italic"
          android:textColor="#F7F7F8"
          android:textSize="17sp"
          android:layout_below="@id/but1"
          android:layout_marginTop="30dp"
          android:layout_centerHorizontal="true"

          />
    <Button
        android:id="@+id/but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bacground"
        android:text="ORGANIC COMPOUNDS"
        android:textStyle="bold|italic"
        android:textColor="#F7F7F8"
        android:textSize="17sp"
        android:layout_below="@+id/but2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/but4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bacground"
        android:text="INORGANIC COMPOUNDS"
        android:textStyle="bold|italic"
        android:textColor="#F7F7F8"
        android:textSize="17sp"
        android:layout_below="@id/but3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        />












</RelativeLayout>